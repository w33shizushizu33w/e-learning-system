 <% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row d-flex justify-content-center mt-4">
    <aside class="span col-3">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside> 
    <div class="col-6">
      <h3>Activity Feed</h3>
    </div>     
<% else %>  
 <div>
    <h1 class="text-center mt-5"><strong>!!Enjoy Learning!!</strong></h1>
        <p class="text-center">~ Aim to be a master of English ~</p>
 </div> 
<div class="card bg-light text-dark justify-content-start offset-2 col-8 offset-2">
    <%= image_tag "home_pic.webp", class: "justify-content-start offset-2 col-8 offset-2" %>
        <div class="card-img-overlay">
            <% if logged_in? %>
                <p class="mt-md-5">get out?</p>
                <%= link_to "Log out", logout_path, class: "btn btn-outline-secondary w-50", method: "delete" %>
            <% else %>
                <p class="mt-4">New here?</p>
                 <%= link_to "Sign up", signup_path, class: "btn btn-outline-success w-50" %>
                <p class="mt-4">Already have an account?</p>
                <%= link_to "Log in", login_path, class: "btn btn-outline-warning w-50" %>
            <% end %>
        </div>
</div>
<% end %>
