<%= provide(:title, "index") %>
<div class="text-center">
    <h1>Lessons</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @category.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.title %></td>
          <td><%= category.description %></td>
        </tr>
          <% end %>
  </tbody>
</table>
        