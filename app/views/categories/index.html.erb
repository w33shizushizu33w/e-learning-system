<%= provide(:title, "index") %>
<div class="text-center">
    <h1>Lessons</h1>
</div>
<div class="row d-flex justify-content-center mt-4">
    <%= will_paginate @category%>
</div>

<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @category.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= link_to category.title, words_path(category) %></td>
          <td><%= category.description %></td>
        <% if logged_in? && current_user.is_admin? %> 
          <td><%= link_to raw("<i class='fas fa-pen text-success'></i>"), edit_category_path(category) %></td>
          <td><%= link_to raw("<i class='fa fa-trash text-danger'></i>"), category, method: :delete, data: { confirm: "You sure?" } %></td>
        <% end %>
        </tr>
      <% end %>
  </tbody>
</table>
</div>
<div class="row d-flex justify-content-center">
    <%= will_paginate @category%> 
</div>
        