<% provide(:title, 'List of Users') %>
<div class="container">
  <div class="row d-flex justify-content-center">
    <%= will_paginate %>
  </div>
      <div class="row d-flex justify-content-center">
        <ul class="users">
            <% @users.each do |user| %>
                <li class="my-3">
                    <%= gravatar_for user, size: 52 %>
                    <%= link_to user.name, user %>
                    <%= link_to raw("<i class='fa fa-trash text-danger'></i>"), user_path(user), class: "text-danger", method: :delete, data: { confirm: "You sure?" } unless !current_user?(user)%>
                </li>
            <% end %>  
        </ul>  
      </div>
   <div class="row d-flex justify-content-center">
    <%= will_paginate %>
   </div>
</div>           