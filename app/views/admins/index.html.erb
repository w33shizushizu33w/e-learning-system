<%= provide(:title, "Words") %>
<div class="row mt-5 mx-auto justify-content-center">
    <%= render 'form' %>
        <div class="ml-5">
            <div class="card text-primary bg-light" style="width: 60rem;">
                <div class="row card-header">
                    <h3 class="offset-1">Words for the lessons</h3>
                    <%= link_to "Create new word", href="#", class: "btn btn-outline-danger offset-md-5" %>
                </div>
                <div class="card-body">
                    <div class="container">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Word</th>
                                    <th scope="col">Answer</th>
                                    <th scope="col">Created date</th>
                                    <th colspan="3"></th>
                                </tr>
                            </thead>
                            <tbody>
                            <% @admin.each do |admin| %>
                                <tr>
                                    <td><%= admin.id %></td>
                                    <td><%= admin.word %></td>
                                    <td><%= admin.answer %></td>
                                    <td><%= admin.created_at.to_date%>
                              <% if logged_in? && current_user.is_admin? %> 
                                    <td><%= link_to raw("<i class='fas fa-pen text-success'></i>") %></td>
                                    <td><%= link_to raw("<i class='fa fa-trash text-danger'></i>"), method: :delete, data: { confirm: "You sure?" } %></td>
                              <% end %>
                                </tr>
                            <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</div>
<div class="row d-flex justify-content-center mt-3">
    <%= will_paginate @admin%>   
</div>